{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Europe/London",
  "rangeStrategy": "replace",
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["nuget"],
      "groupName": "NuGet dependencies",
      "groupSlug": "nuget",
      "separateMajorMinor": false
    },
    {
      "matchManagers": ["npm"],
      "groupName": "npm deps",
      "groupSlug": "npm"
    }
  ]
}
