{
  "extends": ["github>gssira/renovate-config:default.json"],
  "enabledManagers": ["nuget", "github-actions", "docker"],
  "packageRules": [
    {
      "description": "Group .NET (NuGet) minor + patch updates",
      "matchManagers": ["nuget"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": ".NET dependencies (minor + patch)"
    }
  ],
  "hostRules": [
    {
      "matchHost": "api.nuget.org",
      "username": "token",
      "password": "${{ secrets.NUGET_TOKEN }}"
    }
  ]
}
